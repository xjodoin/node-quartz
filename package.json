{
  "name": "node-quartz",
  "version": "1.0.0",
  "description": "Distributed, resilient, Redis‑backed job scheduler for Node.js (cron, multi‑queue, retries + DLQ, definition store, CLI)",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -p .",
    "test": "npm run build && mocha --reporter spec --exit",
    "lint": "eslint .",
    "demo": "node test.js",
    "prepublishOnly": "npm run build",
    "cli": "node bin/quartz-cli.js",
    "test:compose": "docker compose up --abort-on-container-exit --exit-code-from test"
  },
  "bin": {
    "quartz": "bin/quartz-cli.js",
    "node-quartz": "bin/quartz-cli.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/xjodoin/node-quartz.git"
  },
  "author": "Xavier Jodoin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/xjodoin/node-quartz/issues"
  },
  "homepage": "https://xjodoin.github.io/node-quartz/",
  "keywords": [
    "cron",
    "scheduler",
    "redis",
    "jobs",
    "worker",
    "queue",
    "quartz",
    "distributed",
    "resilient",
    "nodejs"
  ],
  "sideEffects": false,
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/xjodoin"
  },
  "contributors": [
    "Xavier Jodoin"
  ],
  "maintainers": [
    "Xavier Jodoin"
  ],
  "directories": {
    "doc": "docs"
  },
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": "./dist/index.js"
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "bin"
  ],
  "dependencies": {
    "redis": "^4.6.13",
    "cron-parser": "^4.9.0"
  },
  "engines": {
    "node": ">=14"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "mocha": "^10.6.0",
    "chai": "^4.4.1",
    "typescript": "^5.6.2",
    "@types/node": "^20.14.12"
  }
}
